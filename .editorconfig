# http://editorconfig.org
root = true

[*]
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
charset = utf-8

[Makefile]
indent_style = tab

[Dockerfile]
indent_style = space
indent_size = 4

[*.go]
indent_style = tab

[*.{yaml,yml,tpl,sh}]
indent_style = space
indent_size = 2

[*.{py,java,json,xml,ini}]
indent_style = space
indent_size = 4
